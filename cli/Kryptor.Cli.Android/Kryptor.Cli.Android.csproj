<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0-android</TargetFramework>
    <SupportedOSPlatformVersion>21</SupportedOSPlatformVersion>
    <OutputType>Exe</OutputType>
    <ApplicationId>com.sapteam.kryptor.cli</ApplicationId>
    <Configurations>Debug;Light</Configurations>
  </PropertyGroup>
  
  <PropertyGroup Condition="'$(Configuration)'!='Debug'">
    <AndroidPackageFormat>apk</AndroidPackageFormat>
    <AndroidCreatePackagePerAbi>True</AndroidCreatePackagePerAbi>
    <AndroidLinkTool>r8</AndroidLinkTool>
    <RunAOTCompilation>True</RunAOTCompilation>
    <EnableLLVM>False</EnableLLVM>
    <AndroidEnableProfiledAot>True</AndroidEnableProfiledAot>
    <PublishTrimmed>True</PublishTrimmed>
    <TrimMode>link</TrimMode>
  </PropertyGroup>
  
  <PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <Debugger>Xamarin</Debugger>
  </PropertyGroup>

  <PropertyGroup Condition="'$(RunAOTCompilation)' == 'True'">
    <DefineConstants>$(DefineConstants);AOT</DefineConstants>
  </PropertyGroup>
  
  <ItemGroup>
    <Reference Include="System.CommandLine">
      <HintPath>..\..\..\command-line-api\artifacts\bin\System.CommandLine\Debug\net8.0-android\System.CommandLine.dll</HintPath>
    </Reference>
  </ItemGroup>
  
</Project>